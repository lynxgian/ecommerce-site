generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id      String   @id @default(uuid())
  name    String
  price   Int
  image   String[]
  Order   Order?   @relation(fields: [orderId], references: [id])
  orderId String?
}

model Order {
  id     String  @id @default(cuid())
  user   User?   @relation(fields: [userId], references: [id])
  userId String?
  item   Item[]
  status OrderStatus
  trackingNumber String?
  cost   Int
}

enum OrderStatus {
  Pending
  Cancelled
  Paid
}

model User {
  id       String  @id @default(uuid())
  orders   Order[]
  email    String  @unique
  password String
  name     String
  username String
}

