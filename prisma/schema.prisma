generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


model Item {
  id      String   @id @default(uuid())
  name    String
  price   Int
  image   String[]
  Order   Order    @relation(fields: [orderId], references: [id])
  orderId String
  Cart    Cart     @relation(fields: [cartId], references: [id])
  cartId  String
}

model Order {
  id             String      @id @default(cuid())
  user           User        @relation(fields: [userId], references: [id])
  userId         String
  item           Item[]
  status         OrderStatus
  trackingNumber String
  cost           Int
}

enum OrderStatus {
  Pending
  Cancelled
  Paid
  Completed
}

model Cart {
  id   String   @id @default(uuid())
  item Item[]
  user UserCart?
}

model UserCart {
  id     String @id @default(uuid())
  userId String @unique
  cartId String @unique
  cart   Cart @relation(fields: [cartId], references: [id])
  user   User @relation(fields: [userId], references: [id])
}

model User {
  id       String  @id 
  role     UserRole
  orders   Order[]
  email    String   @unique
  name     String
  username String
  cart     UserCart?
}

enum UserRole {
  Admin
  Staff
  Customer
}
